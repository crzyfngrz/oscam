#!/bin/sh

case "$1" in
start)
	ulimit -s 512
	exec start-stop-daemon -S -x /usr/bin/oscam_Dmod -- -b -r 2 -c /etc/tuxbox/config/oscam_Dmod
	;;
stop)
	exec start-stop-daemon -K -R 2 -x /usr/bin/oscam_Dmod &
	sleep 2
	killall -9 oscam 2>/dev/null
	sleep 2
	rm -rf /tmp/.oscam
	;;
restart|reload)
	$0 stop
	sleep 1
	$0 start
	;;
version)
	echo "SVN 8451"
	;;
info)
	echo "oscam-Dmod"
	;;
*)
	echo "Usage: $0 start|stop|restart"
	exit 1
	;;
esac
exit 0

